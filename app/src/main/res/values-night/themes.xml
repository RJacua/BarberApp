<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BarberApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Cor de fundo do app -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Cor do texto no app -->
        <item name="android:textColorPrimary">@color/colorText</item> <!-- Cor de texto principal -->
        <item name="android:textColorSecondary">@color/colorText</item> <!-- Cor de texto secundário -->
        <item name="android:textColorHint">@color/colorText</item> <!-- Cor do texto de dica (hint) -->

        <!-- Estilos para botões -->
        <item name="android:buttonStyle">@style/ButtonStyle</item> <!-- Botões com fundo amarelo e texto amarelo -->

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">@color/colorBackground</item>

    </style>

    <!-- Definindo o estilo de botões -->
    <style name="ButtonStyle">
        <item name="android:background">@color/colorButtonBackground</item> <!-- Fundo do botão -->
        <item name="android:textColor">@color/colorButtonText</item> <!-- Texto do botão -->
    </style>

    <!-- Estilo de botões inativos -->
    <style name="ButtonStyle.Disabled">
        <item name="android:background">@color/colorButtonDisabledBackground</item> <!-- Fundo do botão desativado -->
        <item name="android:textColor">@color/colorButtonDisabledText</item> <!-- Texto do botão desativado -->
    </style>

    <style name="Theme.BarberApp" parent="Base.Theme.BarberApp" />
</resources>