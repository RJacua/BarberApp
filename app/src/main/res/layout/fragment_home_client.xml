<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeClientFragment">

    <TextView
        android:id="@+id/clientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Client"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />


    <Button
        android:id="@+id/btnBarberShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BarberShop"
        app:layout_constraintBottom_toTopOf="@+id/btnBarber"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="144dp" />

    <Button
        android:id="@+id/btnBarber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="barber"
        app:layout_constraintBottom_toTopOf="@+id/btnServices"
        app:layout_constraintTop_toBottomOf="@+id/btnBarberShop"
        tools:layout_editor_absoluteX="152dp" />

    <Button
        android:id="@+id/btnServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        app:layout_constraintBottom_toTopOf="@+id/btnappointment"
        app:layout_constraintTop_toBottomOf="@+id/btnBarber"
        tools:layout_editor_absoluteX="151dp" />

    <Button
        android:id="@+id/btnappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment"
        app:layout_constraintBottom_toTopOf="@+id/btnsave"
        app:layout_constraintTop_toBottomOf="@+id/btnServices"
        tools:layout_editor_absoluteX="149dp" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnappointment"
        tools:layout_editor_absoluteX="150dp" />
</androidx.constraintlayout.widget.ConstraintLayout>