<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/transparent"> <!-- Transparente para mostrar o seletor -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/item_default_background"
        android:elevation="4dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewClientName"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:text="Client"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            style="@style/TextStyle.Body"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:text="Date"
            app:layout_constraintStart_toEndOf="@+id/textViewClientName"
            tools:layout_editor_absoluteY="16dp"
            style="@style/TextStyle.Body"/>

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="79dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:text="Time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewService"
            style="@style/TextStyle.Body"/>

        <TextView
            android:id="@+id/textViewService"
            android:layout_width="88dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:text="Service"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewClientName"
            app:layout_constraintVertical_bias="0.714"
            style="@style/TextStyle.Body"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:layout_marginEnd="136dp"
            android:text="Price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.907"
            style="@style/TextStyle.Body"/>

        <Button
            android:id="@+id/btnEditStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ButtonStyle"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
